{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noEmit": false,
    "rootDir": "./src",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./lib",
    "paths": {
      "@/*": ["./src/*"],
      "%/*":["./*"]
    },
    "declarationDir": "./declarations",
    "declaration": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/__tests__/**/*",
    "temp/**",
    "../moon-wanmi/src/demo/**"
  ]
}
